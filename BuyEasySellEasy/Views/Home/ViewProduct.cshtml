@model BuyEasySellEasy.Models.Products
@{
    ViewBag.Title = "ViewProduct";
}
<style>
    img {
        border-radius: 20px;
    }
</style>
<div class="row d-flex justify-content-center align-items-center mt-3">
    <div class="col-sm-3" style="height: 400px; width: 300px;">
        <img src="data:image;base64,@Model.Photo2" class="img-fluid" alt="Small Image" style="height: 100%; width: 100%; object-fit: cover;">
    </div>
    <div class="col-sm-4" style="height: 550px; width: 400px;">
        <img src="data:image;base64,@Model.Photo1" class="img-fluid" alt="Big Image" style="height: 100%; width: 100%; object-fit: cover;">
    </div>
    <div class="col-sm-3" style="height: 400px; width: 300px;">
        <img src="data:image;base64,@Model.Photo3" class="img-fluid" alt="Small Image" style="height: 100%; width: 100%; object-fit: cover;">
    </div>
</div>
<div id="price" class="d-flex justify-content-center align-items-center mt-2">
    <h5>Price @Model.Price /-</h5>
</div>
<div class="d-flex justify-content-center align-items-center mt-2">
    <a href="#" class="btn btn-primary">Buy Now</a>
    <a href="#" class="btn btn-warning ms-3">Add to Cart</a>
</div>
<div id="Description">
    <p>@Model.Description</p>
</div>